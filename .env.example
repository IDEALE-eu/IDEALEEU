# IDEALEEU Configuration Template
# Copy this file to .env and update with your actual values
# Do not commit .env files with secrets to version control

# Environment (dev, staging, production)
IDEALEEU_ENV=dev

# Logging configuration
IDEALEEU_LOG_LEVEL=info

# Database connection
IDEALEEU_DB_URL=postgresql://user:pass@db:5432/ideale

# Object storage (S3-compatible)
IDEALEEU_OBJECT_STORE=s3://bucket/prefix

# OpenID Connect configuration
OIDC_ISSUER_URL=https://auth.example.com/
OIDC_AUDIENCE=ideale-api

# JWT signing key (generate a strong secret for production)
JWT_SIGNING_KEY=change-me

# Event bus connection (NATS)
EVENT_BUS_URL=nats://nats:4222
