# LLM Playground Configuration Example
# Copy to .env and configure for your environment

# Environment
IDEALE_ENV=dev
IDEALE_LOG_LEVEL=info

# Database
IDEALE_DB_URL=postgresql://ideale:changeme@localhost:5432/ideale_llm

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
JWT_SIGNING_KEY=change-me-in-production
JWT_EXPIRATION_SECONDS=3600

# KMS Provider (local, aws, azure, gcp)
KMS_PROVIDER=local

# AWS KMS (if using aws)
# AWS_KMS_KEY_ID=arn:aws:kms:region:account:key/key-id

# Azure Key Vault (if using azure)
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# Google Cloud KMS (if using gcp)
# GCP_KMS_KEY_NAME=projects/PROJECT/locations/LOCATION/keyRings/RING/cryptoKeys/KEY

# LLM Providers
# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Azure OpenAI (optional)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-openai-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Audit
AUDIT_LOG_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Vector Store (for RAG)
# PostgreSQL with pgvector
VECTOR_STORE_TYPE=pgvector
VECTOR_STORE_URL=postgresql://ideale:changeme@localhost:5432/ideale_vectors

# Or Qdrant
# VECTOR_STORE_TYPE=qdrant
# QDRANT_HOST=localhost
# QDRANT_PORT=6333

# Playground UI
PLAYGROUND_UI_PORT=8080
