{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ideale-eu.eu/schemas/telemetry.schema.json",
  "title": "Aircraft Telemetry Data",
  "description": "Schema for aircraft telemetry data streaming to digital twin",
  "type": "object",
  "required": ["timestamp", "aircraft_id", "flight_id", "data"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp (UTC)"
    },
    "aircraft_id": {
      "type": "string",
      "pattern": "^AC-H2-[0-9]{3}$",
      "description": "Aircraft serial number"
    },
    "flight_id": {
      "type": "string",
      "description": "Unique flight identifier"
    },
    "data": {
      "type": "object",
      "properties": {
        "propulsion": {
          "type": "object",
          "properties": {
            "fc_voltage": {"type": "number", "minimum": 200, "maximum": 280},
            "fc_current": {"type": "number", "minimum": 0, "maximum": 500},
            "fc_temperature_degC": {"type": "number", "minimum": -50, "maximum": 300},
            "h2_flow_rate_kg_per_h": {"type": "number", "minimum": 0, "maximum": 50}
          }
        },
        "electrical": {
          "type": "object",
          "properties": {
            "battery_soc_percent": {"type": "number", "minimum": 0, "maximum": 100},
            "battery_voltage": {"type": "number", "minimum": 190, "maximum": 280},
            "battery_current": {"type": "number", "minimum": -400, "maximum": 400}
          }
        },
        "fuel_system": {
          "type": "object",
          "properties": {
            "h2_tank1_pressure_bar": {"type": "number", "minimum": 0, "maximum": 700},
            "h2_tank2_pressure_bar": {"type": "number", "minimum": 0, "maximum": 700}
          }
        },
        "flight_dynamics": {
          "type": "object",
          "properties": {
            "altitude_msl_ft": {"type": "number", "minimum": -1000, "maximum": 50000},
            "tas_kts": {"type": "number", "minimum": 0, "maximum": 400},
            "pitch_deg": {"type": "number", "minimum": -90, "maximum": 90},
            "roll_deg": {"type": "number", "minimum": -180, "maximum": 180},
            "yaw_deg": {"type": "number", "minimum": 0, "maximum": 360}
          }
        }
      }
    }
  }
}
