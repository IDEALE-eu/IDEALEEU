{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.idealeeu.eu/digitaltwin/events/v1",
  "title": "Digital Twin Event Schema",
  "description": "Schema for digital twin lifecycle events",
  "type": "object",
  "required": ["event_id", "event_type", "timestamp", "model_id"],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique event identifier",
      "pattern": "^EVT-[A-Z0-9]{8}$"
    },
    "event_type": {
      "type": "string",
      "enum": ["model_update", "calibration", "validation", "deployment", "state_snapshot", "alert"],
      "description": "Type of event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "model_id": {
      "type": "string",
      "description": "Model identifier",
      "pattern": "^[A-Z0-9-]+$"
    },
    "utcs_anchor": {
      "type": "string",
      "description": "UTCS traceability anchor",
      "pattern": "^utcs://.+$"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific data"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {"type": "string"},
        "version": {"type": "string"},
        "integrity_hash": {"type": "string"}
      }
    }
  }
}
